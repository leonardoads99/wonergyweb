@model IList<vonergyDom.domain.DispositivoIOT>

@using (Html.BeginForm("ListarDispositivo", "DispositivoIot", FormMethod.Get))
{
    <div class="container">
        <hr />
        <div class="row">
            <div class="col-md-5 col-md-offset-3">
                <input type="search" class="form-control" placeholder="Buscar" id="inputPesquisa" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary" id="btnNovoFuncionario">Buscar Dispositivo</button>
            </div>
        </div>
        <div id="listFuncionario" class="row">
            <div class="table-responsive col-md-12">
                <table class="table table-striped" cellpadding="0" cellspacing="0" id="tblFuncionario">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>serial Equipamento</th>
                            <th>Nome</th>
                           <th>Marca</th>
                            <th>Modelo</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoEsp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="actions">
                            @Html.ActionLink("Visualizar", "Detalhes", "DispositivoIot", new { Id = item.Id }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Editar", "Editar", "DispositivoIot", new { Id = item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", "DispositivoIot", new { Id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
}
