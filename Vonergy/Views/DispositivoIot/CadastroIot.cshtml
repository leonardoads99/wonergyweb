@model vonergyDom.ViewModel.DispositivoIOT

@{
    ViewBag.Title = "CadastroIot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<h3 class="text-center" id="h3">Cadastro de Dispositivo</h3>

<hr />
@using (Html.BeginForm("CadastroIot", "DispositivoIot", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="panel panel-primary" id="panelPessoais">
            <div class="panel-heading">Dispositivos</div>
            <div class="panel panel-body" id="panelCorpo">
                <div class="row">
                    <div class="form-group col-md-2">
                        @Html.EditorFor(model => model.CodigoEsp, new { htmlAttributes = new { @class = "form-control ", placeholder = "Serial" } })
                        @Html.ValidationMessageFor(model => model.CodigoEsp, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-5">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control NomeEquipamento", placeholder = "Nome Equipamento" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-2">
                        @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control nome", placeholder = "Marca" } })
                        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-2">
                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control Modelo", placeholder = "Modelo   " } })
                        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-11">
                        @Html.EditorFor(model => model.Descicao, new { htmlAttributes = new { @class = "form-control ", placeholder = "Descrição" } })
                        @Html.ValidationMessageFor(model => model.Descicao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-9 col-md-9">
                        <input type="submit" value="Cadastrar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
