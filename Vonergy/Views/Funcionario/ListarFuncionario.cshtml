
@model IList<vonergyDom.domain.Funcionario>

@{
    ViewBag.Title = "ListarFuncionario";
}

@if (ViewBag.Message == "Funcionario Excluido")
{
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p class="text-center">
                        <div class="alert alert-success" role="alert" id="msg">
                            @ViewBag.Message
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
}

@Styles.Render("~/Content/css")

@using (Html.BeginForm("ListarFuncionario", "Funcionario", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-3">
                <input type="search" class="form-control" placeholder="Buscar" id="inputPesquisa" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary" id="btnNovoFuncionario">Buscar Funcionario</button>
            </div>
        </div>
        <div id="listFuncionario" class="row">
            <div class="table-responsive col-md-12">
                <table class="table table-striped" cellpadding="0" cellspacing="0" id="tblFuncionario">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Cpf</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cpf)
                                </td>
                                <td class="actions">
                                    @Html.ActionLink("Visualizar", "Detalhes", "Funcionario", new { Id = item.Id }, new { @class = "btn btn-success" })
                                    @Html.ActionLink("Editar", "Editar", "Funcionario", new { Id = item.Id }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("Delete", "Delete", "Funcionario", new { Id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/bootstrap")





