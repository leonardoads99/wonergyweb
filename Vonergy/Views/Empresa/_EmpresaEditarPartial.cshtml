@model vonergyDom.domain.Empresa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<div class="row">
    <h3 class="text-center" id="h3">Atualizar Empresa</h3>
    <hr />
    <div class=" form-group col-md-offset-1">
        @Html.ActionLink("Voltar", "ListarEmpresa", "Empresa", new { @class = "btn btn-primary" })
    </div>
</div>

@using (Html.BeginForm("AtualizarEmpresa", "Empresa", FormMethod.Get))
{
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary ">
            <div class="panel-body">
                <div class="row col-md-offset-2">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.Id)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.RazaoSocial, new { htmlAttributes = new { @class = "form-control", placeholder = "Razão Social" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.NomeFantasia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome Fantasia" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Cnpj, new { htmlAttributes = new { @class = "form-control", placeholder = "Cnpj" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Ativo, "1")
                                    Ativo
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Ativo, "0")
                                    Inativo
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Cep, new { htmlAttributes = new { @class = "form-control", placeholder = "Cep" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Logradouro, new { htmlAttributes = new { @class = "form-control", placeholder = "Logradouro" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Cidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Cidade" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Bairro, new { htmlAttributes = new { @class = "form-control", placeholder = "Bairro" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Uf, new { htmlAttributes = new { @class = "form-control", placeholder = "Uf" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Numero, new { htmlAttributes = new { @class = "form-control", placeholder = "Numero" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Complemento, new { htmlAttributes = new { @class = "form-control", placeholder = "Complemento" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Celular, new { htmlAttributes = new { @class = "form-control", placeholder = "Celular" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Site, new { htmlAttributes = new { @class = "form-control", placeholder = "Site" } })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-offset-8">
                            <button type="submit" class="btn btn-success">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

