@model vonergyDom.ViewModel.Industrias

@using vonergyDom.ViewModel.Enumm
@{
    ViewBag.Title = "ConfiguracaoSistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-center" id="h3">Configuracao de custo</h3>

@Styles.Render("~/Content/css")

@using (Html.BeginForm("CadastrarEmpresa", "Configuracao", FormMethod.Post))
{

    <div class="container">
        <div class="panel panel-primary" id="panelPessoais">
            <div class="panel-heading">Configuração</div>
            <div class="panel panel-body" id="panelCorpo">
                <div class="row">
                    <div class="form-group col-md-8">
                        @Html.DropDownListFor(c => c.NomeDistribuidoraEletrica, Enum.GetValues(typeof(DistribuidoraEletrica)).Cast<DistribuidoraEletrica>().Select(c => new SelectListItem { Text = c.ToString(), Value = c.ToString() }), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NomeDistribuidoraEletrica, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.Localizaçao, new { htmlAttributes = new { @class = "form-control", placeholder = "Localização" } })
                        @Html.ValidationMessageFor(model => model.Localizaçao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        @Html.EditorFor(model => model.Custo, new { htmlAttributes = new { @class = "form-control rg", placeholder = "Custo" } })
                        @Html.ValidationMessageFor(model => model.Custo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-10 col-md-9">
                        <input type="submit" value="Cadastrar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}


@Scripts.Render("~/bundles/bootstrap")


