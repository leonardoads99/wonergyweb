
@model vonergyDom.domain.Equipamentos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<div class="row">
    <h3 class="text-center" id="h3">Atualizar Equipamento</h3>
    <hr />
    <div class=" form-group col-md-offset-1">
        @Html.ActionLink("Voltar", "ListarEquipamento", "Equipamentos", new { @class = "btn btn-primary" })
    </div>
</div>

@using (Html.BeginForm("AtualizarEquipamento", "Equipamentos", FormMethod.Post))
{
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary ">
            <div class="panel-body">
                <div class="row col-md-offset-2">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.Id)
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.NomeEquipamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome Equipamento" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Marca, new { htmlAttributes = new { @class = "form-control", placeholder = "Marca" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.Modelo, new { htmlAttributes = new { @class = "form-control", placeholder = "Modelo" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.CorrenteMaxima, new { htmlAttributes = new { @class = "form-control", placeholder = "Corrente Maxima" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.CorrentMinima, new { htmlAttributes = new { @class = "form-control", placeholder = "Corrente Minima" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.PotenciaMaxima, new { htmlAttributes = new { @class = "form-control", placeholder = "Potencia Maxima" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.PotenciaMinima, new { htmlAttributes = new { @class = "form-control", placeholder = "Potencia Minima" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.TensaoMaxima, new { htmlAttributes = new { @class = "form-control", placeholder = "Tensão Maxima" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(modelItem => modelItem.TensaoMinima, new { htmlAttributes = new { @class = "form-control", placeholder = "Tensão Minima" } })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-offset-8">
                            <button type="submit" class="btn btn-success">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/bootstrap")





